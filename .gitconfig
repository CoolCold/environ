[user]
	email = coolthecold@gmail.com
	name = Roman Ovchinnikov

[core]
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol,tab-in-indent,tabwidth=4
[i18n]
commitencoding = UTF-8
logoutputencoding = UTF-8

[help]
autocorrect = 1

[push]
default = matching

[branch]  
autosetuprebase = always

[alias]
up = pull
st = status
ci = commit
br = branch
co = checkout
sta = stash
di = diff
dic = diff --cached
rma = !git status | grep deleted | cut -d ' ' -f 5 | xargs git rm
unstage = reset HEAD --
un = reset HEAD --
slog = log --pretty=format:'%cd [%h] %an: %s' --date=short
sslog = log -n 10 --pretty=format:'%cd [%h] %an: %s' --date=short
glog = log --graph --decorate --pretty=oneline --abbrev-commit --all
lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
last = log -1 HEAD
poh = push origin HEAD
sdiff = !git diff && git submodule foreach 'git diff'
ss = submodule summary
sbr = submodule foreach git branch
sbp = submodule foreach git pull
sbcm = submodule foreach git checkout master
pullrs = pull --recurse-submodules

[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
whitespace = blue reverse

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

